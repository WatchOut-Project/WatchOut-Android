<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Watchout" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_watchout</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Watchout</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Watchout</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Watchout</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Watchout</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Watchout</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_watchout</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_watchout</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Watchout</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_up_arrow</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Watchout.Widget</item>
        <!-- Widgets Theme -->
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewwatchout</item>
        <item name="android:buttonStyle">@style/Buttonwatchout</item>
        <item name="android:imageButtonStyle">@style/ImageButtonwatchout</item>
        <item name="android:dropDownSpinnerStyle">@style/Spinnerwatchout</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_light</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_holo_light</item>

        <!-- AlertDialog -->
        <item name="android:alertDialogStyle">@style/Holo.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/Holo.Theme.Dialog.Alert</item>
    </style>
    
    <style name="Theme.Watchout.Up" parent="@style/Theme.Watchout">
        <item name="android:homeAsUpIndicator">@drawable/actionbar_up_arrow</item>
    </style>

    <style name="ActionBar.Solid.Watchout" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_watchout</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_watchout</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_watchout</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Watchout</item>
    </style>

    <style name="ActionBar.Transparent.Watchout" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_watchout</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Watchout</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Watchout.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Watchout</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Watchout</item>
    </style>

</resources>