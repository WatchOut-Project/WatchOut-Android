<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/wo_margin_normal" >

        <ImageView
            android:id="@+id/post_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/wo_margin_normal"
            android:layout_marginTop="@dimen/wo_margin_little"
            android:background="@drawable/post_icon" />

        <EditText
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/wo_margin_normal"
            android:layout_marginRight="@dimen/wo_margin_extreme"
            android:layout_marginTop="@dimen/wo_margin_big"
            android:layout_toRightOf="@id/post_profile_pic"
            android:background="@null"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:textSize="@dimen/wo_text_enormous" />

        <TextView
            android:id="@+id/post_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/post_content"
            android:layout_marginLeft="@dimen/wo_margin_normal"
            android:layout_marginRight="@dimen/wo_margin_extreme"
            android:layout_marginTop="@dimen/wo_margin_little"
            android:layout_toRightOf="@id/post_profile_pic"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textSize="@dimen/wo_text_huge" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="@dimen/post_picutre_width"
            android:layout_height="@dimen/post_picutre_width"
            android:layout_below="@id/post_location"
            android:layout_marginLeft="@dimen/wo_margin_normal"
            android:layout_marginTop="@dimen/wo_margin_normal"
            android:layout_toRightOf="@id/post_profile_pic"
            android:scaleType="fitXY" />
    </RelativeLayout>

</ScrollView>